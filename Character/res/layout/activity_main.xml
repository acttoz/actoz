        <ImageButton
            android:id="@+id/btn0"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="8.6"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/btn1" />

